<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txt_activity_identificacao_aluno_ra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/txtRA"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/activity_identificacao_aluno_ra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Digite seu RA"
            android:inputType="number"
            android:background="@drawable/campo_texto_padrao"/>

        <TextView
            android:id="@+id/txt_activity_identificacao_aluno_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/txtNomeAluno"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/activity_identificacao_aluno_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Digite o nome"
            android:inputType="textCapWords"
            android:background="@drawable/campo_texto_padrao"/>

        <TextView
            android:id="@+id/txt_activity_identificacao_aluno_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/txtCurso"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/activity_identificacao_aluno_curso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Digite seu curso"
            android:inputType="textCapSentences|textAutoCorrect"
            android:background="@drawable/campo_texto_padrao"/>

        <TextView
            android:id="@+id/txt_activity_identificacao_aluno_turma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/txtTurma"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/activity_identificacao_aluno_turma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="Digite sua turma"
            android:inputType="textCapWords"
            android:background="@drawable/campo_texto_padrao"/>

        <Button
            android:id="@+id/btn_activity_identificacao_aluno_avancar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AvanÃ§ar"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/corTextButton"
            android:background="@drawable/padrao_arredondar_button_azul"/>

        <Button
            android:id="@+id/btn_activity_identificacao_aluno_desistir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/corTextButton"
            android:background="@drawable/padrao_arredondar_button_azul"/>

    </LinearLayout>
</ScrollView>